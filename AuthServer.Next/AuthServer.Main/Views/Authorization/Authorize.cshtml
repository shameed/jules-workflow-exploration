@model AuthServer.Main.ViewModels.Authorization.AuthorizeViewModel
@{
    ViewData["Title"] = "Authorization";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card card-shadow border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                     <h3 class="fw-bold brand-color">Authorization Request</h3>
                     <p class="lead">
                         Application <strong>@Model.ApplicationName</strong> wants to access your account.
                     </p>
                </div>

                @if (Model.Scopes.Any())
                {
                    <div class="mb-4">
                        <h5 class="fw-bold">Requested Permissions:</h5>
                        <ul class="list-group list-group-flush">
                            @foreach (var scope in Model.Scopes)
                            {
                                <li class="list-group-item">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    @scope
                                </li>
                            }
                        </ul>
                    </div>
                }

                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <form asp-action="Accept" method="post" class="w-100">
                        <!-- Forward all query parameters to the action -->
                        @foreach (var parameter in Context.Request.Query)
                        {
                            <input type="hidden" name="@parameter.Key" value="@parameter.Value" />
                        }

                        <button type="submit" class="btn btn-primary btn-lg w-100">Allow</button>
                    </form>

                    <form asp-action="Deny" method="post" class="w-100">
                        @foreach (var parameter in Context.Request.Query)
                        {
                            <input type="hidden" name="@parameter.Key" value="@parameter.Value" />
                        }
                        <button type="submit" class="btn btn-outline-danger btn-lg w-100">Deny</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
