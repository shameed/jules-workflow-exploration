@using AuthServer.Main.Resources
@model AuthServer.Main.Models.AccountViewModels.PasswordRecoveryViewModel
@inject LocService SharedLocalizer
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("FORGOT_YOUR_PASSWORD");
}

<div class="inspire-layout h-100">
    <div class="inspire-layout-content h-100 login-bg ">
        <div class="inspire-layout-content-inner">
            <div class="d-flex flex-row-reverse p-5">
                <div class="card w-25">
                    <div class="card-body p-5">
                        <h5 class="card-title">Forgot Password?</h5>
                        <p>Please provide your User Id to answer the security question.</p>
                        <form id="frmForgotQuestion" asp-route="ForgotPasswordQuestion" method="post" class="form-horizontal">

                           @*  @if (Model != null && Model.Questions.Count() > 0)
                            { *@
                                <div class="mb-3">
                                    <input asp-for="UserID" autofocus class="form-control form-control-sm fs-6" placeholder="@SharedLocalizer.GetLocalizedHtmlString("USERID")" readonly />
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Questions" data-placement="left" data-trigger="manual" class="form-label">Questions</label>
                                    @Html.DropDownListFor(m => m.Question, Model.Questions, "Select a Question", new { @class = "form-select form-select-sm fs-6" })
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Answer" title="Answer" class="form-label">Answer</label>
                                    <input asp-for="Answer" oncopy="return false" onPaste="return false" onCut="return false" autocomplete="off" class="form-control form-control-sm fs-6" id="Answer" name="Answer" />
                                </div>
                         @*    } *@
                            <div class="mb-3" style="display: flex; flex-direction: row-reverse;justify-content: space-around;">
                                <button name="submit" id="btnSubmit" value="ForgotPasswordQuestion" class="inspire-btn-secondary px-5 ">@SharedLocalizer.GetLocalizedHtmlString("Submit")</button>
                                <button name="submit" value="Cancel" class="inspire-btn-secondary px-5">@SharedLocalizer.GetLocalizedHtmlString("Cancel")</button>
                            </div>
                            <div asp-validation-summary="All"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('frmForgotQuestion');
            const submitButton = document.getElementById('btnSubmit');

            form.addEventListener('keydown', function (event) {
                if (event.key === 'Enter' && event.target.tagName !== 'BUTTON') {
                    event.preventDefault();
                    submitButton.click();
                }
            });

            form.addEventListener('submit', function (event) {
                if (submitButton.disabled) {
                    event.preventDefault();
                } else {
                    submitButton.disabled = true;
                }
            });
        });
    </script>
}
